<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.socandroid.myfriends.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:background="@color/colorPrimary"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="19dp"
        android:padding="10dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/NameTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profileImageView"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toRightOf="@+id/profileImageView"
        android:text="Iyanu Tayo Naimat"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:textStyle="italic|bold"/>

    <TextView
        android:id="@+id/departmentTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/NameTextView"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toRightOf="@id/profileImageView"
        android:fontFamily="casual"
        android:layout_marginTop="10dp"
        android:text="Elect Elect, Faculty Of Technology"
        android:textColor="?attr/colorPrimary"
        android:textSize="15sp"
        android:textStyle="italic|bold" />

    <LinearLayout
        android:id="@+id/names_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageView"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/names_of_friends_text_view"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textColor="@color/colorYellow"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/name_of_course_mates_text_view"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:fontFamily="casual"
            android:textColor="@color/colorYellow"
            android:textSize="20sp"
            android:background="@color/colorBlack"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/nameChangeEditText"
            android:hint="Enter your name here"
            android:textColor="#A7CC99"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/change_name_button"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Click me to change name"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <!--this is my first app-->
</RelativeLayout>

</ScrollView>

